@page
@model BookStoreRazor.Pages.Categories.CreateModel

<form method="post">
    <div class="container border">
        <div class="row">
            <h2 class="text-primary"> Create Category</h2>
        </div>
<div class="row mb-2">
    
        <label asp-for="@Model.category.Name" class="p-2"></label>
        <input class="form-control" asp-for="@Model.category.Name" />
        <span class="alert-danger" asp-validation-for="@Model.category.Name"></span>
    
</div>

<div class="row mb-2">

            <label asp-for="@Model.category.DisplayOrder" class="p-2"></label>
       <input asp-for="@Model.category.DisplayOrder" class="form-control" />
        <span class="alert-danger" asp-validation-for="@Model.category.DisplayOrder"></span>
       
   
</div>
<div class="row pb-2">
    <div class="col-6 col-md-3">
            <button class=" btn btn-primary form-control">Create</button>
    </div>
    <div class="col-6  col-md-3">
            <a class="btn btn-secondary form-control"  asp-page="/Categories/Index"> Back to List</a>
    </div>
      
    </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

