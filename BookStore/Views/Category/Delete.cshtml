@model Category
<form method="post">
    <input asp-for="Id" hidden />
    <div class="container border">
        <div class="row">
            <h2 class=" text-primary ">Delete Category </h2>
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="row mb-3">
            <label asp-for="Name" class="p-1"></label>
            <input asp-for="Name" disabled  class="form-control" />
           
        </div>
        <div class="row mb-3">
            <label asp-for="DisplayOrder" class="p-1"></label>
            <input asp-for="DisplayOrder" disabled  class="form-control" />
           
        </div>
        <div class="row pb-2">
            <div class="col-6 col-md-3">
                <button class="btn btn-primary form-control" type="submit">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Index" class="btn btn-secondry border form-control">Back To List</a>
            </div>
        </div>

    </div>
</form>



