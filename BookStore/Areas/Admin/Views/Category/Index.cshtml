@model List<Category>

<div class="container">
    <div class="row pt-4 ">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class=" btn btn-primary">
                <i class="bi bi-plus-circle-fill"> Create New Category</i>

            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <th>@obj.Name</th>
                    <th>@obj.DisplayOrder</th>
                    <th>
                        <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-controller="Category" class="btn btn btn-primary mx-2" asp-route-categoryId="@obj.Id">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-action="Delete" asp-controller="Category" class="btn btn btn-danger mx-2" asp-route-categoryId="@obj.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>

                        </div>
                    </th>

                </tr>
            }
        </tbody>
    </table>
</div>
